<section
  class='vh-100 bg-image'
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');"
>
  <div class='mask d-flex align-items-center h-100 gradient-custom-3'>
    <div class='container h-100'>
      <div class='row d-flex justify-content-center align-items-center h-100'>
        <div class='col-12 col-md-9 col-lg-7 col-xl-6'>
          <div class='card' style='border-radius: 15px;'>
            <div class='card-body p-5'>
              <h2 class='text-uppercase text-center mb-5'>Update Users</h2>
              {{!-- server error --}}
              {{#if serverError}}
                <div style='color: red;'>{{serverError}}</div>
              {{/if}}

              {{!-- clientside error --}}
              <div><h5
                  id='updateUserErrorMessage'
                  style='color: red; text-align: center'
                ></h5></div>

                {{!-- Register form --}}
              <form id='updateUserMyForm'> 

                  <textarea style="display:none;" name="userId">{{result._id}}</textarea>
                <div class='form-outline mb-4'>
                  <label class='form-label' for='form3Example1cg'>Your Name</label>
                  <input
                    id='updateUsername'
                    type='text'
                    class='form-control form-control-lg'
                    name='username',
                    value={{result.username}}
                    
                  />

                </div>

                <div class='form-outline mb-4'>
                  <label class='form-label' for='form3Example3cg'>Your Email</label>
                  <input
                    id='updateEmail'
                    type='email'
                    class='form-control form-control-lg'
                    name='email'
                    value={{result.email}}
                  />

                </div>

                <div class='form-outline mb-4'>
                  <label class='form-label'>Password</label>
                  <input
                    id='updatePassword'
                    type='password'
                    class='form-control form-control-lg'
                    name='password'
                  />

                </div>

                <div class='d-flex justify-content-center'>
                  <button
                    id='updateUsersubmitBtn'
                    class='btn btn-success btn-block btn-lg gradient-custom-4 text-body'
                  >Update User</button>
                </div>

                

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>