{{>nav}}

<section class="product_section layout_padding">
  <div class="container">
    <div class="heading_container heading_center">
      <h2>
        Our
        <span>products</span>
      </h2>
    </div>
    <div class="row">

 {{#each products}}
<div class="col-sm-6 col-md-4 col-lg-3">
        <div class="box">
          <div class="option_container">
            <div class="options">            
               <button onclick="" class="option2">Add to Cart</button>
                <button class="option2">
                Buy Now
              </button>
            </div>
          </div>
          <div class="img-box">
            <img src="images/{{title}}.jpg" alt="" />
          </div>
          <div class="detail-box">
            <h5>
            {{title}}
            </h5>
            <h6>
              ${{price}}
            </h6>
          </div>
        </div>
      </div>
 {{/each}}
      
    </div>
    <div class="btn-box">
      <a href="">
        View All products
      </a>
    </div>
  </div>
        
 

</section>
